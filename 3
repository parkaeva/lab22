#include <iostream>
#include <string>
#include <fstream>
#include <clocale>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	char a[500];
	string path = "myFile.txt";
	string d = "file.txt";
	ofstream prt;
	prt.open(d,ofstream::app);
	ifstream abc;
	abc.open(path, ifstream::app);
	while (!abc.eof())
	{
		abc.getline(a, sizeof(a));
		prt << a << endl;
	}
	abc.close();
	prt.close();
	return 0;
}
